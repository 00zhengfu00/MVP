<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="CoreAppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppThemeDay" parent="CoreAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/selectable_item_background_general_light_normal</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_general_light_pressed
        </item>
        <item name="widgetBackgroundTitle">@android:color/white</item>
    </style>


    <style name="AppThemeNight" parent="CoreAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/selectable_item_background_general_dark_normal</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_general_dark_pressed
        </item>
        <item name="widgetBackgroundTitle">@color/colorPrimary</item>
    </style>

    <style name="TextViewTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <style name="TextViewSubhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>

</resources>
